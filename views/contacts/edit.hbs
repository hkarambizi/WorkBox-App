      <h3>Edit Contact Info:</h3>
      <form action="/users/{{user.id}}/contacts/{{contact.id}}?_method=PUT" method="POST" class="form-horizontal">
        <div class="form-group">
          <label class="col-lg-3 control-label">Job Title:</label>
          <div class="col-lg-8">
            <input class="form-control" name="title" value="{{contact.title}}" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Company:</label>
          <div class="col-lg-8">
            <input class="form-control" name="company" value="{{contact.company}}" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input class="form-control" name="email" value="{{contact.email}}" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Phone Number:</label>
          <div class="col-md-8">
            <input class="form-control" name="phone" value="{{contact.phone}}" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Notes:</label>
          <div class="col-md-8">
             <input class="form-control" name="notes" value="{{contact.notes}}" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <input type="submit" class="btn btn-primary" value="Save Changes">
            <span></span>
            <input class="btn btn-default" value="Reset" type="reset">
          </div>
        </div>
      </form>
      <form method="POST" action="/users/{{user.id}}/contacts/{{contact.id}}?_method=DELETE">
		 <button type="submit" value="DELETE" class="btn btn-danger" />Delete Contact</button>
		</form>
		<button><a href="/users/{{user.id}}">Cancel</a></button>
    </div>
  </div>
</div>